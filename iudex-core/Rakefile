$LOAD_PATH << './lib'
require 'iudex-core/base'

require 'rubygems'
gem     'rjack-tarpit', '~> 1.0.0'
require 'rjack-tarpit'

t = RJack::TarPit.new( 'iudex-core',
                       Iudex::Core::VERSION,
                       :no_assembly )

t.specify do |h|
  h.developer( "David Kellum", "dek-oss@gravitext.com" )
  h.extra_deps += [ [ 'iudex-filter',   '~> 1.0.0'  ],
                    [ 'gravitext-util', '~> 1.4.0'  ],
                    [ 'rjack-slf4j',    '~> 1.5.8'  ],
                    [ 'rjack-logback',  '>= 0.9.17' ] ]
  h.rubyforge_name = "iudex"
end

t.jars = [ t.default_jar ]

file 'Manifest.txt' => "lib/#{t.name}/base.rb"

t.define_tasks
